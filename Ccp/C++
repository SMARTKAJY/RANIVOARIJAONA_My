#include<iostream>
#include<string>
int main()
{
    std::cout << "entrer votre age :" ;
    int age { 0 };
    std::cin >> age ;
    if(age<18)
    {
        std::cout << "Vous etes mineur";
    }
    else if( age>=18 &&age<60)
    {
        std::cout<<"Vous etes adulte";
    }
    else if(age>60)
    {
        std::cout<<"Vous etes vieux";
    }
    return 0;
}
